<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.churtado.basket" >

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".UILayer.MainMenu"
            android:label="@string/app_name"
            android:screenOrientation="landscape" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".UILayer.Stats"
            android:label="@string/title_activity_stats"
            android:screenOrientation="landscape" >
        </activity>
        <activity
            android:name=".UILayer.Game"
            android:label="@string/title_activity_game"
            android:screenOrientation="landscape" >
        </activity>
        <activity
            android:name=".UILayer.SeasonMenu"
            android:label="@string/title_activity_season_menu"
            android:screenOrientation="landscape" >
        </activity>
        <activity
            android:name=".UILayer.EditTeam"
            android:label="@string/title_activity_edit_team"
            android:screenOrientation="landscape">
        </activity>
        <activity
            android:name=".UILayer.GameConfig"
            android:label="@string/title_activity_game_config"
            android:screenOrientation="landscape">
        </activity>
    </application>

</manifest>
